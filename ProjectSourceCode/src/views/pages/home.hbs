{{> header isHome=true }}

<main class="main-container">
  <div class="content-grid">
    <aside class="sidebar">
      <div class="card">
        <div class="card-header">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6"></path>
            <path d="M18 9h1.5a2.5 2.5 0 0 0 0-5H18"></path>
            <path d="M4 22h16"></path>
            <path d="M10 14.66V17c0 .55-.47.98-.97 1.21C7.85 18.75 7 20.24 7 22"></path>
            <path d="M14 14.66V17c0 .55.47.98.97 1.21C16.15 18.75 17 20.24 17 22"></path>
            <path d="M18 2H6v7a6 6 0 0 0 12 0V2Z"></path>
          </svg>
          <h2>Top Savers</h2>
        </div>
        <div class="leaders-list" id="leadersList"></div>
      </div>

      <div class="card">
        <div class="card-header">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"></circle>
            <circle cx="12" cy="12" r="6"></circle>
            <circle cx="12" cy="12" r="2"></circle>
          </svg>
          <h2>Budget Summary</h2>
        </div>
        <div id="envelopesSummary" class="envelopes-summary"></div>
      </div>

      <button class="btn-primary" data-bs-toggle="modal" data-bs-target="#addPostModal">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"></circle>
          <line x1="12" y1="8" x2="12" y2="16"></line>
          <line x1="8" y1="12" x2="16" y2="12"></line>
        </svg>
        <span>Add Post</span>
      </button>
    </aside>

    <section class="feed">
      <div class="feed-header">
        <h1>Today's Spending</h1>
        <p>See what your friends are spending on</p>
      </div>
      <div class="posts-container" id="postsContainer"></div>
    </section>
  </div>
</main>

{{!-- Modal --}}
<div class="modal fade" tabindex="-1" id="addPostModal">
  <div class="modal-dialog">
    <div class="modal-content" style="background-color: white; border: 2px solid #10b981; border-radius: 12px;">
      <div class="modal-header" style="background-color: #10b981; color: white;">
        <h5 class="modal-title" id="postModalTitle">Create a New Post</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="addPostForm" novalidate enctype="multipart/form-data">
          <div class="mb-3">
            <label for="postAmount" class="form-label"> Amount </label>
            <input type="number" step="0.01" min="0" class="form-control" id="postAmount" placeholder="$" />
            
          </div>
          <div class="mb-3">
            <label for="postCategory" class="form-label">Category</label>
            <select class="form-select" id="postCategory">
              <option value="" selected>Select a category </option>
              <option value="Food">Food</option>
              <option value="Groceries">Groceries</option>
              <option value="Transportation">Transportation</option>
              <option value="Shopping">Shopping</option>
              <option value="Entertainment">Entertainment</option>
              <option value="Bills">Bills</option>
              <option value="Pets">Pets</option>
              <option value="Other">Other</option>
            </select>
          </div>
          <div class="mb-3">
            <label for="postDescription" class="form-label">Description</label>
            <textarea class="form-control" id="postDescription" rows="3" placeholder="Add a description"></textarea>
          </div>
          <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" id="postAddToTransactions" checked />
            <label class="form-check-label" for="postAddToTransactions">
              Add expense to transactions
            </label>            
          </div>
          <div class="mb-3">
            <label class="form-label">Where at?</label>
            <div class="location-search-wrapper">
              <div class="location-input-group">
                <button type="button" class="btn btn-outline-success" id="useMyLocationBtn">
                  Use my location
                </button>
                <input
                  type="text"
                  class="form-control"
                  id="postLocationSearch"
                  placeholder="Enter location"
                  autocomplete="off"
                />
                <button type="button" class="btn btn-outline-secondary" id="clearLocationBtn" title="Clear location">
                  Clear
                </button>
              </div>
              <div id="locationSuggestions" class="location-suggestions" role="listbox"></div>
              <div class="form-text">
                
                {{#unless googleMapsApiKey}}
                  Google Maps API key missing. Add it to .env to enable automatic suggestions.
                {{/unless}}
              </div>
            </div>
            <input type="hidden" id="postLocationName" />
            <input type="hidden" id="postLocationAddress" />
            <input type="hidden" id="postLocationLat" />
            <input type="hidden" id="postLocationLng" />
            <input type="hidden" id="postLocationPlaceId" />
            <input type="hidden" id="postCreatedAt" />
          </div>
          <div class="mb-3">
            <label class="form-label">Image</label>
            <div class="image-upload-control">
              <input type="file" id="postImage" accept="image/*" class="d-none" />
              <button class="btn btn-outline-success w-100" type="button" id="triggerImageUpload">Upload Image</button>
              <div class="form-text" id="postImageFilename">No file selected</div>
            </div>
          </div>
        </form>
      </div>
       <div class="modal-footer" style="border-top: 1px solid #10b981;">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" form="addPostForm" class="btn btn-success" style="background-color: #10b981; border: none;">
          Post
        </button>
      </div>
    </div>
  </div>
</div>

{{!-- Image preview --}}
<div class="modal fade image-preview-modal" tabindex="-1" id="imagePreviewModal" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-body p-0">
        <img id="imagePreview" src="" alt="Full-size post image" class="w-100" />
      </div>
    </div>
  </div>
</div>

{{> footer year=year }}
