{{> header isSettings=true }}

<main class="main-container">
  <div class="settings-card">
    <h1>Settings</h1>

    <section class="setting-item">
      <label class="setting-label">Profile Picture</label>
      <label class="upload-area">
        <input id="profile-upload" type="file" accept="image/*">
      </label>
    </section>

    <section class="setting-item danger">
      <label class="setting-label">Account</label>
      <button id="Delete_Account" class="btn-danger">Delete Account</button>
    </section>
  </div>
</main>

{{> footer year=year }}
